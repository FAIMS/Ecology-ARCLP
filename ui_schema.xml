<h:html xmlns="http://www.w3.org/2002/xforms"
    xmlns:ev="http://www.w3.org/2001/xml-events"
    xmlns:h="http://www.w3.org/1999/xhtml"
    xmlns:jr="http://openrosa.org/javarosa"
    xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <h:head>
    <h:title>Ecology ARCLP</h:title>
    <model>
      <instance>
        <faims id="Ecology ARCLP">
          <style>
            <orientation>
              <orientation/>
            </orientation>
            <even>
              <layout_weight/>
            </even>
            <large>
              <layout_weight/>
            </large>
          </style>
          <user>
            <usertab>
              <users/>
            </usertab>
          </user>
          <bettong>
            <!-- Physical Characteristics -->
            <physicalCharacteristics>
              <recordId/>
              <scribe/>
              <processingPerson/>
              <totalWeight/>
              <bagWeight/>
              <pes/>
              <tailWidth/>
              <condition/>
              <new/>
              <earTagNumber/>
              <dna/>
              <collarFrequency/>
              <sex/>
              <testes/>
              <pouch/>
              <pySize/>
              <comments/>
            </physicalCharacteristics>
            <!-- Approach and Removal -->
            <approachAndRemoval>
              <timestamp/>
              <wNumber/>
              <bagNumber/>
              <coodinates>
                <childLeft>
                  <latitude/>
                </childLeft>
                <childRight>
                  <longitude/>
                </childRight>
              </coodinates>
              <takeFromGps/>
              <movedInTrap/>
              <madeNoise/>
              <defecatedInTrap/>
              <hessianRemoved/>
              <numBlowsToBag/>
              <bouncedInBag/>
            </approachAndRemoval>
            <!-- Processing and Release -->
            <processingAndRelease>
              <madeNoiseOnProcessing/>
              <struggledOnProcessing/>
              <defecatedOnProcessing/>
              <wNumberOnRelease/>
              <timeOnRelease/>
              <numberNudgesToLeave/>
              <seconds/>
              <hopRun/>
              <openWarrenOutSight/>
              <alarmCall/>
              <notes/>
            </processingAndRelease>
          </bettong>
        </faims>
      </instance>
      <!-- Bind statements here -->
    </model>
  </h:head>
  <h:body>
    <group ref="style">
      <label/>
      <group ref="orientation">
        <label/>
        <input ref="orientation">
          <label>horizontal</label>
        </input>
      </group>
      <group ref="even">
        <label/>
        <input ref="layout_weight">
          <label>1</label>
        </input>
      </group>
    </group>
    <!-- USER TAB GROUP -->
    <group ref="user">
      <label>{User_List}</label>
      <group ref="usertab" faims_scrollable="false">
        <label>{User_List}</label>
        <select1 ref="users" appearance="compact" faims_certainty="false" faims_annotation="false">
          <label>{Users}</label>
          <item>
            <label><!-- Username populated by ui_logic.bsh --></label>
            <value><!--          Populated by ui_logic.bsh --></value>
          </item>
        </select1>
      </group>
    </group>
    <!-- BETTONG TAB GROUP -->
    <group ref="bettong" faims_archent_type="entity">
      <label>Bettong</label>
      <!-- PHYSICAL CHARACTERISTICS TAB -->
      <group ref="physicalCharacteristics">
        <label>Physical Characteristics</label>
        <input ref="recordId" faims_annotation="false" faims_read_only="true">  <label>{Record_ID}</label></input>
        <input ref="scribe" faims_annotation="false" faims_read_only="true">    <label>{Scribe}</label></input>
        <input ref="processingPerson">                                          <label>{Processing_Person}</label></input>
        <input ref="totalWeight">                                               <label>{Total_Weight}</label></input>
        <input ref="bagWeight">                                                 <label>{Bag_Weight}</label></input>
        <input ref="pes">                                                       <label>{Pes}</label></input>
        <input ref="tailWidth">                                                 <label>{Tail_Width}</label></input>
        <select1 ref="condition" appearance="full">
          <label>{Condition}</label>
          <item><label>G</label>  <value>0</value></item>
          <item><label>F</label>  <value>1</value></item>
          <item><label>N/A</label><value>2</value></item>
        </select1>
        <select1 ref="new" appearance="full">
          <label>{New}</label>
          <item><label>Y</label>  <value>0</value></item>
          <item><label>N</label>  <value>1</value></item>
          <item><label>N/A</label><value>2</value></item>
        </select1>
        <input ref="earTagNumber"><label>{Ear_Tag_Number}</label></input>
        <select1 ref="dna" appearance="full">
          <label>{DNA}</label>
          <item><label>Y</label>  <value>0</value></item>
          <item><label>N</label>  <value>1</value></item>
          <item><label>N/A</label><value>2</value></item>
        </select1>
        <input ref="collarFrequency"><label>{Collar_Frequency}</label></input>
        <select1 ref="sex" appearance="full">
          <label>{New}</label>
          <item><label>M</label>  <value>0</value></item>
          <item><label>F</label>  <value>1</value></item>
          <item><label>N/A</label><value>2</value></item>
        </select1>
        <input ref="testes"><label>{Testes}</label></input>
        <select1 ref="pouch" appearance="full">
          <label>{Pouch}</label>
          <item><label>A</label>    <value>0</value></item>
          <item><label>V</label>    <value>1</value></item>
          <item><label>N/A</label>  <value>2</value></item>
          <item><label>Other</label><value>3</value></item>
        </select1>
        <input ref="pySize">    <label>{PY_Size}</label></input>
        <input ref="comments">  <label>{Comments}</label></input>
      </group>
      <!-- APPROACH AND REMOVAL TAB -->
      <group ref="approachAndRemoval">
        <label>Approach and Removal</label>
        <input ref="timestamp" faims_read_only="true">          <label>{Timestamp}</label></input>
        <!-- W# and Bag# were to be side-by-side -->
        <input ref="wNumber">                                   <label>{W_Number}</label></input>
        <input ref="bagNumber">                                 <label>{Bag_Number}</label></input>
        <group ref="coodinates" faims_style="orientation">
          <label/>
          <childLeft faims_style="even">
            <label/>
            <input ref="latitude"  faims_read_only="true"> <label>{Latitude}</label></input>
          </childLeft>
          <childRight faims_style="even">
            <label/>
            <input ref="longitude" faims_read_only="true"> <label>{Longitude}</label></input>
          </childRight>
        </group>
        <trigger ref="takeFromGps"><label>Take from GPS</label></trigger>
        <select1 ref="movedInTrap" appearance="full">
          <label>{Moved_In_Trap}</label>
          <item><label>Y</label>    <value>0</value></item>
          <item><label>N</label>    <value>1</value></item>
          <item><label>N/A</label>  <value>2</value></item>
        </select1>
        <select1 ref="madeNoise" appearance="full">
          <label>{Made_Noise}</label>
          <item><label>Y</label>    <value>0</value></item>
          <item><label>N</label>    <value>1</value></item>
          <item><label>N/A</label>  <value>2</value></item>
        </select1>
        <select1 ref="defecatedInTrap" appearance="full">
          <label>{Defecated_In_Trap}</label>
          <item><label>Y</label>    <value>0</value></item>
          <item><label>N</label>    <value>1</value></item>
          <item><label>N/A</label>  <value>2</value></item>
        </select1>
        <select1 ref="hessianRemoved" appearance="full">
          <label>{Hessian_Removed}</label>
          <item><label>Y</label>    <value>0</value></item>
          <item><label>N</label>    <value>1</value></item>
          <item><label>N/A</label>  <value>2</value></item>
        </select1>
        <input ref="numberBlowsToBag"><label>{Number_Blows_To_Bag}</label></input>
        <select1 ref="bouncedInBag" appearance="full">
          <label>{Bounced_In_Bag}</label>
          <item><label>Y</label>    <value>0</value></item>
          <item><label>N</label>    <value>1</value></item>
          <item><label>N/A</label>  <value>2</value></item>
        </select1>
      <!-- PROCESSING AND RELEASE TAB -->
      <group ref="processingAndRelease">
        <label>Processing and Release</label>
        <select1 ref="madeNoiseOnProcessing" appearance="full">
          <label>{Made_Noise_On_Processing}</label>
          <item><label>Y</label>    <value>0</value></item>
          <item><label>N</label>    <value>1</value></item>
          <item><label>N/A</label>  <value>2</value></item>
        </select1>
        <select1 ref="struggledOnProcessing" appearance="full">
          <label>{Struggled_On_Processing}</label>
          <item><label>Y</label>    <value>0</value></item>
          <item><label>N</label>    <value>1</value></item>
          <item><label>N/A</label>  <value>2</value></item>
        </select1>
        <select1 ref="defecatedOnProcessing" appearance="full">
          <label>{Defecated_On_Processing}</label>
          <item><label>Y</label>    <value>0</value></item>
          <item><label>N</label>    <value>1</value></item>
          <item><label>N/A</label>  <value>2</value></item>
        </select1>
        <!-- TIME ON RELEASE -->
        <!-- CLOCK SELECTOR  -->
        <input ref="numberNudgesToLeave"><label>{Number_Nudges_To_Leave}</label></input>
        <input ref="seconds"><label>{Seconds}</label></input>
        <select1 ref="hopRun" appearance="full">
          <label>{Hop_Run}</label>
          <item><label>H</label>    <value>0</value></item>
          <item><label>R</label>    <value>1</value></item>
          <item><label>HR</label>   <value>2</value></item>
          <item><label>N/A</label>  <value>3</value></item>
        </select1>
        <select1 ref="openWarrenOutSight" appearance="full">
          <label>{Open_Warren_Out_Sight}</label>
          <item><label>OOS</label>  <value>0</value></item>
          <item><label>O</label>    <value>1</value></item>
          <item><label>W</label>    <value>2</value></item>
          <item><label>N/A</label>  <value>3</value></item>
        </select1>
        <select1 ref="alarmCall" appearance="full">
          <label>{Alarm_Call}</label>
          <item><label>Y</label>    <value>0</value></item>
          <item><label>N</label>    <value>1</value></item>
          <item><label>N/A</label>  <value>2</value></item>
        </select1>
        <!--
             NB: Labelling the field "Notes" as below is inconsistent with the
             Physical Characteristics tab, which uses "Comments".
        -->
        <input ref="notes"><label>Notes</label></input>
      </group>
    </group>
  </h:body>
</h:html>
